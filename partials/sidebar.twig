<button id="menu" class="button-reset dn-l w-100 dib pv2 mv1 bn bg-custom-red white pointer">{{ settings.themes.personal.navigation | default('Navigation') }}</button>


{% if theme.navsecondlevel %}

	<ul id="navi" class="list w-100 tl pa0 ma0 close">

		{% for element in navigation %}

			<li class="">

				{% if (element.folderContent and element.contains == 'pages') %}
					
					<a class="left-link-bg left-link-bg-hover left-link-color left-link-color-hover link flex justify-between w-100 dib pa2 mt1 bn {% if (element.active or element.activeParent) %} active{% endif %}" href="{{ element.urlAbs }}">
						<span>{{ element.name }}</span>
						<span class="arrow-down w2"></span>
					</a>
					{% if (element.active or element.activeParent) %}
						<ul class="list w-100 tl bt b--white pa0 ma0">
							{% for subelement in element.folderContent %}
								<li><a class="left-link-bg left-link-bg-hover left-link-color left-link-color-hover link w-100 pv1 ph2 dib bn {% if (subelement.active) %} active{% endif %}" href="{{ subelement.urlAbs }}">&#8594; {{ subelement.name }}</a></li>
							{% endfor %}
						</ul>
					{% endif %}

				{% else %}

					<a class="left-link-bg left-link-bg-hover left-link-color left-link-color-hover link w-100 dib pa2 mv1 bn {% if (element.active or element.activeParent) %} active{% endif %}" href="{{ element.urlAbs }}">{{ element.name }}</a>

				{% endif %}

			</li>

		{% endfor %}

	</ul>

{% else %}

	<ul id="navi" class="list w-100 tc pa0 ma0 close">

		{% for element in navigation %}

			<li class="">
				<a class="left-link-bg left-link-bg-hover left-link-color left-link-color-hover link w-100 dib pv2 mv1 bn {% if (element.active or element.activeParent) %} active{% endif %}" href="{{ element.urlAbs }}">{{ element.name }}</a>
			</li>

		{% endfor %}

	</ul>

{% endif %}
